{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacks": {
            "versions": {
                "node": "20.x"
            }
        },
        "buildCommand": "npm ci --omit=dev && npm run build",
        "environment": [
            "NODE_ENV=production",
            "VITE_API_URL=https://investpromaroc-production.up.railway.app/api",
            "VITE_BASE_PATH=/"
        ]
    },
    "deploy": {
        "startCommand": "serve -s dist -l 3000",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    },
    "env": {
        "PORT": "3000",
        "NODE_ENV": "production",
        "VITE_API_URL": "https://investpromaroc-production.up.railway.app/api",
        "VITE_BASE_PATH": "/"
    }
}